<div class="w-full">
  <div class="bg-white shadow overflow-hidden rounded-lg">
    <div class="px-4 py-5 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3">
      <h1 class="text-lg leading-6 font-medium text-gray-900">Product Details</h1>
      <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2">
        <%= link_to "Edit", edit_product_path(@product), class: "px-3 py-1 bg-indigo-600 text-white text-center rounded-md hover:bg-indigo-700 text-sm" %>
        <%= link_to "Back to products", products_path, class: "px-3 py-1 bg-gray-200 text-gray-700 text-center rounded-md hover:bg-gray-300 text-sm" %>
      </div>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-4 sm:py-5 grid grid-cols-1 sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @product.name %></dd>
        </div>
        <div class="bg-white px-4 py-4 sm:py-5 grid grid-cols-1 sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @product.description %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-4 sm:py-5 grid grid-cols-1 sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Category</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @product.category %></dd>
        </div>
        <div class="bg-white px-4 py-4 sm:py-5 grid grid-cols-1 sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Price</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= number_to_currency(@product.price) %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-4 sm:py-5 grid grid-cols-1 sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Inventory Count</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @product.inventory_count %></dd>
        </div>
      </dl>
    </div>
  </div>
</div>
