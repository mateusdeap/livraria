<%= turbo_frame_tag dom_id(product) do %>
  <!-- Only displayed in desktop/tablet view -->
  <tr class="hover:bg-gray-50">
    <td class="px-4 py-3 whitespace-nowrap">
      <%= link_to product.name, product_path(product), class: "text-indigo-600 hover:text-indigo-900" %>
    </td>
    <td class="px-4 py-3 whitespace-nowrap"><%= product.category %></td>
    <td class="px-4 py-3 whitespace-nowrap"><%= number_to_currency(product.price) %></td>
    <td class="px-4 py-3 whitespace-nowrap"><%= product.inventory_count %></td>
    <td class="px-4 py-3 whitespace-nowrap text-right text-sm font-medium">
      <div class="flex space-x-2">
        <%= link_to "Edit", edit_product_path(product), class: "text-indigo-600 hover:text-indigo-900" %>
        <%= button_to "Delete", product_path(product), method: :delete, class: "text-red-600 hover:text-red-900 bg-transparent border-none cursor-pointer", form: { data: { turbo_confirm: "Are you sure?" } } %>
      </div>
    </td>
  </tr>
<% end %>
